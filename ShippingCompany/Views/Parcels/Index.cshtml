@using System.Collections.Generic;
@using ShippingCompany.Models;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
  <h1>List of Parcels</h1>
  <ul>
    @for (int i = 0; i < Model.Count; i++)
    {
      Parcel parcel = Model[i];
      int parcelNumber = i + 1;
      <li>Parcel @parcelNumber</li>
      <ul>
        <li>Length: @parcel.Length</li>
        <li>Width: @parcel.Width</li>
        <li>Height: @parcel.Height</li>
        <li>Weight: @parcel.Weight</li>
        <li>Volume: @parcel.Volume()</li>
        <li>Cost to ship: @parcel.CostToShip()</li>
      </ul>
    }
  </ul>
  <a href="/parcels/new">Add a new parcel</a>
</body>
</html>